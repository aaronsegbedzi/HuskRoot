<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:openDrawer="start"
    android:orientation="vertical"
    android:background="#f2f2f2"
    android:fitsSystemWindows="false">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="false"
        android:clipToPadding="false"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/footer"
        android:layout_above="@+id/footer">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/productImage"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                custom:srcCompat="@drawable/side_nav_bar"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#fff"
                >

                <View
                    android:layout_width="match_parent"
                    android:background="@android:color/darker_gray"
                    android:layout_height="5dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:padding="10dp">
                    <TextView
                        android:visibility="visible"
                        android:id="@+id/productName"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="21dp"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="normal|bold"
                        android:gravity="center_vertical"
                        android:textAlignment="center" />

                    <TextView
                        android:id="@+id/productPrice1"
                        android:layout_weight="1.5"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="21dp"
                        android:textColor="@color/colorWhite"
                        android:textStyle="normal|bold"
                        android:gravity="center_vertical"
                        android:textAlignment="center"
                        android:textAllCaps="true"
                        android:background="@color/colorPrimary"
                        android:padding="5dp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:background="@android:color/darker_gray"
                    android:layout_height="5dp" />

                <LinearLayout

                    android:padding="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:background="@color/colorPrimary"
                    android:elevation="14dp">
                    <TextView

                        android:id="@+id/farmerImage"
                        android:textColor="#fff"
                        android:gravity="center"

                        android:layout_width="40dp"
                        android:layout_height="50dp"
                        android:background="@drawable/logo"
                        android:elevation="0dp" />
                    <LinearLayout

                        android:layout_marginLeft="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:weightSum="2"
                        >

                        <TextView
                            android:id="@+id/productFarmer"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1.5"
                            android:gravity="center"
                            android:text="Farmer:"
                            android:textAlignment="center"
                            android:textAllCaps="true"
                            android:textColor="@color/colorWhite"
                            android:textSize="14sp"
                            android:textStyle="normal|bold" />

                        <TextView
                            android:id="@+id/productFarmer1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5"
                            android:gravity="center"
                            android:paddingLeft="10dp"
                            android:textAlignment="textStart"
                            android:textAllCaps="true"
                            android:textColor="@color/colorWhite"
                            android:textSize="14sp"
                            android:textStyle="normal|bold" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:background="@android:color/darker_gray"
                    android:layout_height="5dp"
                    android:elevation="6dp" />

                <LinearLayout

                    android:layout_marginTop="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:id="@+id/productLocation1"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Location"
                        android:textColor="@color/colorPrimary"

                        android:textSize="18sp"
                        android:textStyle="normal|bold" />

                    <TextView
                        android:id="@+id/productLocation2"
                        android:layout_weight="0.5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorPrimary"

                        android:textSize="18sp" />
                </LinearLayout>

                <LinearLayout

                    android:layout_marginTop="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:id="@+id/productPrice2"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Price"
                        android:textColor="@color/colorPrimary"

                        android:textSize="18sp"
                        android:textStyle="normal|bold" />
                    <TextView
                        android:id="@+id/productPrice3"
                        android:layout_weight="0.5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorPrimary"

                        android:textSize="18sp" />
                </LinearLayout>


                <LinearLayout

                    android:layout_marginTop="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:id="@+id/productUnit1"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Unit"
                        android:textColor="@color/colorPrimary"

                        android:textSize="18sp"
                        android:textStyle="normal|bold" />

                    <TextView
                        android:id="@+id/productUnit2"
                        android:layout_weight="0.5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorPrimary"

                        android:textSize="18sp" />
                </LinearLayout>

                <LinearLayout

                    android:layout_marginTop="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">
                    <TextView
                        android:id="@+id/productCur1"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Currency"
                        android:textColor="@color/colorPrimary"

                        android:textSize="18sp"
                        android:textStyle="normal|bold" />
                    <TextView
                        android:id="@+id/productCur2"
                        android:layout_weight="0.5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorPrimary"

                        android:textSize="18sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:background="@android:color/darker_gray"
                    android:layout_height="5dp" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="16dp"
                    android:background="@color/colorPrimary"
                    android:weightSum="2"
                    android:elevation="14dp">

                    <TextView
                        android:id="@+id/productDesc1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Product Description"
                        android:textColor="@color/colorWhite"
                        android:textStyle="normal|bold"
                        android:layout_weight="1"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/productDesc2"
                        android:layout_weight="1"
                        android:textColor="@color/colorWhite"
                        android:textSize="14sp" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:background="@android:color/darker_gray"
                    android:layout_height="5dp" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="2"
                    android:padding="16dp">

                    <TextView
                        android:text="Audio Description"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/audio"
                        android:textStyle="normal|bold"
                        android:textColor="@color/colorPrimaryDark"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textAlignment="textStart"
                        android:textSize="18sp" />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:weightSum="2"
                        android:layout_weight="1"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/audioStart"
                            android:layout_weight="1"
                            android:background="@color/colorPrimary"
                            android:src="@android:drawable/ic_media_play"
                            android:padding="10dp"
                            android:layout_margin="2dp" />

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/audioPause"
                            android:layout_weight="1"
                            android:background="@color/colorPrimary"
                            android:src="@android:drawable/ic_media_pause"
                            android:padding="10dp"
                            android:layout_margin="2dp" />

                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:background="@android:color/darker_gray"
                    android:layout_height="5dp" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="2"
                    android:background="@color/colorPrimary"
                    android:padding="10dp"
                    android:elevation="14dp">

                    <TextView
                        android:text="Video Description"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/video"
                        android:textStyle="normal|bold"
                        android:textColor="@color/colorWhite"
                        android:layout_weight="1"
                        android:textAlignment="textStart"
                        android:gravity="center"
                        android:textSize="18sp" />

                    <Button
                        android:text="Play"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/btnVideo"
                        android:layout_weight="1"
                        android:textSize="18sp"
                        android:textStyle="normal|bold"
                        android:textAlignment="center"
                        android:background="@color/colorWhite"
                        android:textColor="@color/colorPrimary" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:background="@android:color/darker_gray"
                    android:layout_height="5dp" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="2"
                    android:background="@color/colorWhite"
                    android:padding="10dp">

                    <TextView
                        android:text="GPS Location"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/map"
                        android:textStyle="normal|bold"
                        android:textColor="@color/colorPrimary"
                        android:layout_weight="1"
                        android:textAlignment="textStart"
                        android:gravity="center"
                        android:textSize="18sp" />

                    <Button
                        android:text="View"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/btnMap"
                        android:layout_weight="1"
                        android:textSize="18sp"
                        android:textStyle="normal|bold"
                        android:textAlignment="center"
                        android:background="@color/colorPrimary"
                        android:textColor="@android:color/white" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:background="@android:color/darker_gray"
                    android:layout_height="5dp" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="2"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/productDate1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Published"
                        android:textStyle="normal|bold"
                        android:textColor="@color/colorPrimary"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textAlignment="center"
                        android:textSize="14sp"
                        android:textAllCaps="true" />

                    <TextView
                        android:id="@+id/productDate2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textStyle="normal|bold"
                        android:textColor="@color/colorPrimary"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textAlignment="center"
                        android:textSize="14sp"
                        android:textAllCaps="true" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/colorPrimary"
        android:elevation="14dp"
        android:layout_alignParentBottom="true">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Call"
            android:padding="16dp"
            android:textSize="18sp"
            android:textColor="@color/colorWhite"
            android:textStyle="normal|bold"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:id="@+id/productPhone"
            android:clickable="true"
            android:background="@color/ColorSuccess" />

        <TextView
            android:id="@+id/productSMS"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/ColorWarning"
            android:clickable="true"
            android:padding="16dp"
            android:text="SMS"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/colorWhite"
            android:textSize="18sp"
            android:textStyle="normal|bold" />

        <TextView
            android:id="@+id/productEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/ColorDanger"
            android:clickable="true"
            android:padding="16dp"
            android:text="Email"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/colorWhite"
            android:textSize="18sp"
            android:textStyle="normal|bold" />

    </LinearLayout>

</RelativeLayout>




